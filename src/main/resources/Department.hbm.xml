<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
    <class name="entities.Department" table="C_DEPARTMENT">

        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>

        <property name="departmentName" column="DEPARTMENT_NAME" type="string"/>

        <!-- В классе сущности тип переменной указать интерфейс Set<groupSet> projects = new HashSet<groupSet>();
        Если указать конкретный класс, реализующий интерфейс, будет ошибка
         <key column="DEPARTMENT_ID"/> - колонка в таблице C_GROUP, в которой будет храниться ID C_DEPARTMENT
        -->
        <set name="groupSet" table="C_GROUP" cascade="all">
            <key column="DEPARTMENT_ID"/>
            <one-to-many class="entities.Group" />
        </set>

    </class>
</hibernate-mapping>