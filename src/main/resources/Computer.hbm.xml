<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping
        PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="entities.Computer" table="C_COMPUTER">

        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>

        <property name="name" column="NAME" type="string"/>
        <property name="RAM" column="RAM" type="integer"/>
        <property name="HDD" column="HDD" type="integer"/>
        <property name="processor" column="PROCESSOR" type="String"/>
        <property name="videoCard" column="VIDEOCARD" type="integer"/>
    </class>
</hibernate-mapping>